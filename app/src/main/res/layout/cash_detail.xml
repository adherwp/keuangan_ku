<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        >

        <ImageView
            android:id="@+id/gambarPanah"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="340dp"
             />

        <TextView
            android:id="@+id/ketNominal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[ + ] Rp 250.000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/ketKeterangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dapet Sangu Dari Ibu"
            android:textSize="15sp"
            android:layout_marginVertical="10dp"
            android:textStyle="bold"
            android:layout_below="@+id/ketNominal"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/ketTanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18-10-2021"
            android:textSize="10sp"
            android:layout_below="@id/ketKeterangan"
            android:maxLines="1"
            android:ellipsize="end"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>